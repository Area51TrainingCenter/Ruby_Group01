<h1>Eyebook!</h1>

<p><%= params[:oauth_token] %></p>
<p>
  <%= request.env['omniauth.auth'].to_json %>
</p>
<%= image_tag request.env["omniauth.auth"]["info"]["image"] if request.env["omniauth.auth"] && request.env["omniauth.auth"]["info"] %>



<%= form_tag "/photos/search" do %>
 <%= text_field_tag "title" %>
 <%= submit_tag "Buscar" %>
<% end %>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Copyright</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @photos.each do |photo| %>
      <tr>
        <td><%= photo.title %></td>
        <td><%= photo.copyright %></td>
        <td><%= link_to 'Show', photo %></td>
        <td><%= link_to 'Edit', edit_photo_path(photo) %></td>
        <td><%= link_to 'Destroy', photo, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Photo', new_photo_path %>
